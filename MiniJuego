    <!-- Bootstrap JS (Popper.js incluido) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <script>
        const noButton = document.querySelector('.btn-no');
        const messageDiv = document.getElementById('message');
        let counter = 0;

        function fadeOutButton() {
            if (counter < 5) {
                counter++;
                noButton.style.opacity = Math.max(0, 1 - counter * 0.2); // Disminuir opacidad
            }
            if (counter >= 5) {
                noButton.classList.add('d-none'); // Ocultar el bot√≥n completamente
                showMessage("El bot√≥n del NO no funciona jodete üòí");
            }
        }

        function accept() {
            showMessage("Venga dime la hora al whatsapp jeje");
        }

        function showMessage(text) {
            messageDiv.textContent = text;
            messageDiv.classList.add('show');
        }
    </script>

